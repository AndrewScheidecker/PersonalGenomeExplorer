<Window x:Class="Personal_Genome_Explorer.ProgressWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Progress" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Closing="OnClosing">
    <Grid Margin="8,8">
        <StackPanel>
			<Label Name="progressLabel" Content="Progress"/>
            <DockPanel>
                <ProgressBar Name="progressBar" Width="300" Margin="4,0"/>
                <Button Name="cancelButton" Content="Cancel"  DockPanel.Dock="Right" Click="OnCancel" />
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
